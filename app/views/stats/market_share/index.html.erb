<% content_for(:title) { "EIS | #{t('.title')}" } %>
<% content_for :hero do %>
    <div class="layout--hero">
        <h1><%= t('.title') %></h1>
        <%= back_link %>
    </div>
<% end %>
<div class="page page--stats">
    <div class="page--header">
        <div class="wrapper">
            <%= render 'stats/search_form' %>  
        </div>
    </div>
    <div class="page--actions">
        <div class="wrapper">
            <div class="page--actions__left">
                <%= link_to t('.market_share'), market_share_path(type: 'distribution'), class: 'button button--secondary' %>
                <%= link_to t('.market_share_growth'), market_share_path(type: 'growth_rate'), class: 'button button--secondary' %>
            </div>
        </div>
    </div>
    <div class="wrapper">
        <% if @type == 'distribution' %>
            <%= market_share_distribution_chart(@search_params) %>
        <% elsif @type == 'growth_rate' %>
            <%= market_share_growth_rate_chart(@search_params) %>
        <% else %>
            <%= market_share_distribution_chart(@search_params) %>
        <% end %>
    </div>
</div>
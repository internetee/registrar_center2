<div class="dialog" id="white_ip_delete">
    <div class="wrapper wrapper__small">
        <div class="paper paper--text__left">
            <div class="paper--header">
                <%= button_tag(class: 'button--close', type: '') do %>
                    <i class="fas fa-times"></i>
                <% end %>
                <h2 id="title"><%= t('white_ips.show.delete_warning_html', ip: @white_ip[:ipv4] || @white_ip[:ipv6]) %></h2>
            </div>
            <div class="paper--content">
                <%= form_with scope: :white_ip, url: white_ip_path(@white_ip), method: :delete,
                                                data: { turbo: true }  do |form| %>
                    <div class="form--actions">
                        <%= form.submit t(:delete), class: 'button button--danger' %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>